<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adpter_selectrec_root"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/img_recAdapter"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_location"
            android:scaleType="centerCrop"/>
    <TextView
            android:id="@+id/title_recAdapter"
            android:textColor="@color/map_1a81da"
            android:text="@string/no_record"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_recAdapter"
            android:gravity="left"
            android:layout_marginLeft="14sp"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/address_recAdapter"
            android:text="@string/no_record"
            app:layout_constraintTop_toBottomOf="@+id/title_recAdapter"
            app:layout_constraintLeft_toRightOf="@+id/img_recAdapter"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:layout_marginLeft="14sp"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>